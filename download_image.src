#!/bin/bash

# Load streams
. streams #INCLUDE

# Load library
. library #INCLUDE

usage(){
    echo "Usage: $0 [music_stream]"
    echo
    list-music-streams
}

if [ "$1" == "" ] || [ $# != 1 ]; then
    usage
    exit 1
fi

DETAILS_URL=$(get-music-stream-details-url $1)

IMAGE_URL=$(curl -s "$DETAILS_URL" | sed -ne 's%[ ]*<img id="EventDetails1_imgEvent" class="img" src="\([^"]*\)".*%http://moje.polskieradio.pl\1%gp')

curl -o image.jpg "$IMAGE_URL"

